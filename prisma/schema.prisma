generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id         String       @id @default(uuid())
  name       String
  phone      String
  username   String       @unique
  password   String
  appoinment appoinment[]
}

model doctor {
  id         String       @id @default(uuid())
  name       String
  phone      String
  degree     String
  desc       String
  status     Int          @default(0)
  username   String
  password   String
  appoinment appoinment[]
}

model appoinment {
  id   String @id @default(uuid())
  date String

  users    user   @relation(fields: [userId], references: [id])
  userId   String
  doctors  doctor @relation(fields: [doctorId], references: [id])
  doctorId String
}

enum Role {
  USER
  DOCTOR
  ADMIN
}
